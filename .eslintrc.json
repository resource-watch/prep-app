{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": ["vizzuality"],
  "globals": {
    "L": true,
    "config": true
  },
  "plugins": ["module-resolver"],
  "parser": "babel-eslint",
  "rules": {
    "max-len": [
      1,
      {
        "code": 200,
        "tabWidth": 2,
        "ignoreComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "import/extensions": [
      2,
      "always",
      {
        "js": "never",
        "jsx": "never"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  }
}
