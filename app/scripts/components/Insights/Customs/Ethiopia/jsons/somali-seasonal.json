{
  "autosize": {"type": "pad", "resize": true, "contains":"padding"},
  "signals": [
    {
      "name": "hover",
      "value": null,
      "on": [
        {
          "events": "@cell:mouseover",
          "update": "datum"
        },
        {
          "events": "@cell:mouseout",
          "update": "null"
        }
      ]
    }
  ],
  "data": [
    {
      "name": "table",
      "url": "https://prep-admin.carto.com/api/v2/sql?q=SELECT%20date::date as x,%20average_rainfall_mm_day as y%20FROM%20somali_ens09_fetched_20160826 order by date::date asc",
      "format": {
        "type": "json",
        "property": "rows",
        "parse": {
          "x": "date"
        }
      }
    },
    {
      "name": "dots",
      "source": "table",
      "transform": [
        {
          "type": "filter",
          "expr": "hover && hover.datum.x === datum.x"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "utc",
      "range": "width",
      "zero": false,
      "domain": {
        "data": "table",
        "field": "x"
      }
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {
        "data": "table",
        "field": "y"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x",
      "labelOverlap":"parity",
      "tickCount": 20
    },
    {
      "orient": "left",
      "scale": "y",
      "labelOverlap":"parity",
      "title": "mm",
      "encode": {
        "title": {
          "update": {
            "dx": {
              "value": 0
            },
            "dy": {
              "value": 0
            },
            "x": {
              "value": 0
            },
            "y": {
              "value": -10
            },
            "align": {
              "value": "right"
            },
            "baseline": {
              "value": "bottom"
            },
            "angle": {
              "value": 0
            }
          }
        }
      }
    }
  ],
  "marks": [
    {"name":"area",
      "type": "area",
      "interactive":false,
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "x",
            "field": "x"
          },
          "y": {
            "scale": "y",
            "field": "y"
          },
          "y2": {
            "scale": "y",
            "value": 0
          },
          "fill": {
            "value": "#57C4D6"
          }
        },
        "update": {
          "fillOpacity": {
            "value": 1
          }
        }
      }
    },
    {
      "name": "points",
      "interactive": false,
      "type": "symbol",
      "from": {
        "data": "dots"
      },
      "encode": {
        "enter": {
          "fill": {
            "value": "#c34545"
          },
          "stroke": {
            "value": "#fff"
          },
          "x": {
            "scale": "x",
            "field": "x"
          },
          "y": {
            "scale": "y",
            "field": "y"
          }
        },
        "update": {
          "opacity": {
            "value": 1
          }
        }
      }
    },
    {
      "name": "cell",
      "type": "path",
      "from": {
        "data": "area"
      },
      "transform": [
        {
          "type": "voronoi",
          "x": "datum.x",
          "y": "datum.y",
          "size": [
            {
              "signal": "width"
            },
            {
              "signal": "height"
            }
          ]
        }
      ],
      "encode": {
        "update": {
          "fill": {
            "value": "red"
          },
          "path": {
            "field": "path"
          },
          "opacity": {
            "value": 0
          }
        }
      }
    }
  ],
  "interaction_config": [
    {
      "name": "tooltip",
      "config": {
        "fields": [
          {
            "column": "datum.x",
            "property": "Date",
            "type":"date",
            "format": null
          },
          {
            "column": "datum.y",
            "property": "Value",
            "type":"number",
            "format": ".2f"
          }
        ]
      }
    }
  ]
}